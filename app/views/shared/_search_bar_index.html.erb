<div class="search-container">
  <%= form_with url: recipes_path, method: :get, class: "d-flex search-container" do %>
    <%= text_field_tag :query ,
          params[:query],
          class: "form-control searchbar me-2",
          placeholder: "Search",
          data: { filtered_index_target: "search" }
    %>
    <a><button type="submit" class="button_default btn-plus green round" data-action="click->filtered-index#sendRequest"><i class="fa-solid fa-plus"></i></button></a>
  <% end %>
</div>

