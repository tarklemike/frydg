<div class="search-containerh">
  <%= form_with url: recipes_path, method: :get, class: "d-flex search-containerh" do %>
    <%= text_field_tag :query ,
          params[:query],
          class: "form-control searchbarh me-2",
          placeholder: "Search",
          data: { filtered_index_target: "search" }
    %>
    <a><button type="submit" class="button_default btn-plus green round" data-action="click->filtered-index#sendRequest"><i class="fa-solid fa-plus"></i></button></a>
  <% end %>
</div>

<style>
  .searchbarh {
    border-radius: 30px;
    border-color: #177152;
    width: 360px;
    height: 60px;
  }
  .search-containerh {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  }
</style>
