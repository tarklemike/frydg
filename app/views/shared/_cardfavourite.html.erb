<div class="card-product">
<% if recipe.photo.attached? %>
    <li><%= cl_image_tag recipe.photo.key, class: "recipecards_img" %></li>
  <% else %>
    <li><%= image_tag recipe.image_url, class: "recipecards_img" %></li>
  <% end %>
  <div class="card-product-infos">
    <li class="recipe_card_title"><strong><%= recipe.title %></strong></li>
          <div class="allergens d-flex">
            <% if recipe.vegetarian %>
              <li><i class="fa-solid fa-drumstick-bite"></i></li>
            <% end %>
            <% if recipe.vegan %>
              <li><i class="fa-solid fa-seedling"></i></li>
            <% end %>
            <% if recipe.dairy_free %>
              <li><i class="fa-solid fa-glass-water"></i></li>
            <% end %>
            <% if recipe.gluten_free %>
              <li><i class="fa-solid fa-wheat-awn"></i></li>
            <% end %>
            </div>
        </div>
