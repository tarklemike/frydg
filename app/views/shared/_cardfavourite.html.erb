<div class="card-product">
  <%if recipe.photo.attached? %>
    <li class="text-decoration"><%= cl_image_tag recipe.photo.key %></li>
  <% else %>
    <li class="text-decoration"><%= image_tag recipe.image_url %></li>
  <% end %>
  <div class="card-product-infos">
<li class="favourite_title text-decoration"><strong><%= recipe.title %></strong></li>
   </div>
</div>
