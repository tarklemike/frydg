<div class="offcanvas-body">
  <div class="sidebar-all">
    <div class="offcanvas offcanvas-end" tabindex="-1" id="sidebar">
      <div class="offcanvas-header">
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <!-- Menu items -->
      <ul class="sidebar-nav">
        <li class="nav-item">
          <h1>Menu</h1>
        </li>
        <li class="nav-item1">
          <%= link_to "All Recipes", recipes_path, class: "nav-link" %>
        </li>
        <li class="nav-item1">
          <%= link_to "Food Bank It", foodbanks_index_path, class: "nav-link" %>
        </li>
        <%if user_signed_in?%>
          <li class="nav-item1">
            <%= link_to "My Recipes", user_session_path, class: "nav-link all-recipes" %>
          </li>
          <li class="quick-actions">
            <%= link_to "Add Recipe", new_recipe_path, class: "action-link" %>
          </li>
          <li class="user-info">
            <%= image_tag "avatar.png", alt: "Profile Picture", class: "profile-pic" %>
          </li>
          <a class="user-name" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            <li><h5 class="user-name dropdown-toggle"><%= current_user.username%></h5></li>
          </a>
          <div class="collapse" id="collapseExample">
            <li class="action-link">
              <div class="card card-body">
                <%= link_to "My Profile", user_session_path, class: "nav-link" %>
                <%= link_to "Manage Account", edit_user_registration_path, class: "action-link" %>
                  <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
                </div>
              </div>
            </li>
          <%else%>
            <li class="nav-item1">
              <%= link_to "Log In", new_user_session_path, class: 'nav-link'%>
            </li>
          <% end %>
          <li class="sidebar-footer">
            <p>
              Â© 2024 Frydg</p>
          </li>
                   </ul>
      </div>
    </ul>
   </div>
  </div>
</div>
