<%= form_with model: @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :method %>
  <%= f.number_field :method %>
  <%= f.label :prep_time %>
  <%= f.text_field :prep_time %>
  <%= f.label :cook_time %>
  <%= f.number_field :cook_time %>
  <%= f.label :level %>
  <%= f.text_field :level %>
  <%= f.label :servings %>
  <%= f.number_field :servings %>
  <%= f.submit %>
<% end %>
