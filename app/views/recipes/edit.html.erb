<div class= "d-flex recipe-edit-container" data-controller="new-recipe">
  <div>
    <div></div>
    <div>
      <%= form_with model: @recipe do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.label :method %>
        <%= f.number_field :method %>
        <%= f.label :prep_time %>
        <%= f.text_field :prep_time %>
        <%= f.label :cook_time %>
        <%= f.number_field :cook_time %>
    </div>
  </div>

  <div>
    <div>
      <%= f.label :level %>
      <%= f.text_field :level %>
      <%= f.label :servings %>
      <%= f.number_field :servings %>
      <%= f.submit %> <%# This is the submit button %>
    <% end %>
    </div>
     <div>
      <ul data-new-recipe-target="ingredientsList">
        <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
          <li><%= recipe_ingredient.ingredient.name %></li>
        <% end %>


      </ul>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
      Add an ingredient
      </button>


      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">Add an ingredient</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= render "recipe_ingredients/new" %>
            </div>
          </div>
        </div>
      </div>
    </div>





</div>
